<h1>Welcome</h1>

<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<h1>Login</h1>
<form class="" action="/users/login" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  Email:<input type="text" name="user[email]" value="">
  Password:<input type="text" name="user[password]" value="">
  <input type="submit" name="submit" value="submit">
</form>

<h1>Register</h1>
<form class="" action="/users" method="post">
<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
Name: <input type="text" name="register[name]" value="">
Email: <input type="text" name="register[email]" value="">
Password: <input type="text" name="register[password]" value="">
Password Confirmation: <input type="text" name="confirm" value="">
<input type="submit" value="register!">
</form>
